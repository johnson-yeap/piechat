<!DOCTYPE html>
<html>
<head>
    <title>PieChat</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css"> <!-- load bootstrap css -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css"> <!-- load fontawesome -->

    <!-- Custom CSS -->
    <link href="stylesheets/theme.css" rel="stylesheet">
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1 class="text-center"><span class="fa fa-sign-in"></span> Signup</h1>
    <hr class="colorgraph">
    
    <!-- show any messages that come back with authentication -->
    <% if (message.length > 0) { %>
        <div class="alert alert-<%- flash_type %>"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post">
        <div class="form-group required-field">
            <label>Email</label>
            <input type="text" class="form-control" name="email" placeholder="youremail@example.com" required>
        </div>
        <div class="form-group required-field">
            <label>Password</label>
            <input type="password" class="form-control" name="password" required>
        </div>
        <div class="form-group required-field">
            <label>Password Confirmation</label>
            <input type="password" class="form-control" name="password_confirmation" required>
        </div>

        <button type="submit" class="btn btn-warning">Signup</button>
    </form>

    <div class="text-right">
        <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span><span class="hidden-xs hidden-sm"> Facebook</span></a>
        <a href="/auth/twitter" class="btn btn-info"><span class="fa fa-twitter"></span><span class="hidden-xs hidden-sm"> Twitter</span></a>
        <a href="/auth/google" class="btn btn-danger"><span class="fa fa-google-plus"></span><span class="hidden-xs hidden-sm"> Google</span></a>
    </div>

    <hr>

    <p class="text-center">Already have an account? <a href="/login">Login here.</a></p>
    <p><a href="/"><span class="fa fa-arrow-circle-o-left fa-2x"></span> Home page.</a></p>


</div>

</div>
</body>
</html>